#!/usr/bin/env php
<?php

namespace Behavioral\ChainOfResponsibility;

require_once './vendor/autoload.php';

$chain = new Chain();

try {
    $chain->addToChain(new NoticeHandler());
    $chain->addToChain(new WarningHandler());
    $chain->addToChain(new ErrorHandler());
    $chain->execute(NoticeHandler::class);
    $chain->execute(WarningHandler::class);
    $chain->execute(ErrorHandler::class);
} catch (\Exception $e) {
    printf('%s', 'Caught exception: '.$e->getMessage()."\n");
}
