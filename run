#!/usr/bin/env php
<?php

namespace Behavioral\ChainOfResponsibility;

require_once 'vendor/autoload.php';

$chain = new Chain();
$chain->addToChain(new NoticeHandler());
$chain->addToChain(new WarningHandler());
$chain->addToChain(new ErrorHandler());

try {
    $chain->run(NoticeHandler::class);
    $chain->run(WarningHandler::class);
    $chain->run(ErrorHandler::class);
} catch (\Exception $e) {
    printf('%s %s %s', 'Caught exception: ',  $e->getMessage(), "\n");
}

